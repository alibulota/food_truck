{% block body %}
    <div class="container theme-showcase" role="main">
      <div class="jumbotron">
        <h1>Tructionary <small style="color: darkgray"><i>noun</i></small></h1>
        <p style="margin-left: 10%">a massive directory of food trucks for your eating pleasure</p>
<!--         <img class="dino-img" src="../static/img/dinotruck.png" alt="the dine-o-truck dino!" align="center"> -->
      </div>
      <div class="truck_detail_header">
      <h1>{{ truck.name }}</h1>
      <ul class="truck_detail">
        <li><em>{{ truck.cuisine }}</em></li>
         {% for neighborhood in truck.location %}
        <li>Chillin' by: {{ neighborhood }}</li>
        {% else %}
        <p><em>No locations in database</em></p>
        {% endfor %}
        <li>{{ truck.payment }}</li>
        <li><a href="{{ truck.website }}">{{ truck.website }}</a></li>
        <li><a href="{{ truck.twitter }}">{{ truck.twitter }}</a></li>
      </ul>
      </div>
        
      
  
    </div> <!-- /container -->
{% endblock %}
