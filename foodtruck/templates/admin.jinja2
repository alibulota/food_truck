              </ul>
            </li>
          </ul>
        </div><!-- /.nav-collapse -->
{% endblock %}


{% block body %}
  <div class="container">
    <h2>Add Truck</h2>
    <form action="{{ request.route_url('add') }}" method="POST">
      <div>
        <label for="name">Truck Name</label>
        <input type="text" name="name" id="name"/>
      </div>
      <div>
        <label for="cuisine">Cuisine</label>
        <input type="text" name="cuisine" id="cuisine"/>
      </div>
      <div>
        <label for="payment">Payment</label>
        <input type="text" name="payment" id="payment"/>
      </div>
      <div>
        <label for="twitter">Twitter address</label>
        <input type="text" name="twitter" id="twitter"/>
      </div>
      <div>
        <label for="website">Web address</label>
        <input type="text" name="website" id="website"/>
      </div>
      <div>
        <input type="submit" name="add" value="Truck It!"/>
      </div>
    </form>
  <div>

  <div class="page-header">
    <h1>The Trucks</h1>
    <ul class="tructionary">
    {% for truck in trucks %}
      <li><a href="/admin/edit/{{ truck.id }}">
      {{ truck.name }} <small>{{ truck.cuisine }}</small>
      </a></li>
    {% endfor %}
    </ul>
  </div>
{% endblock %}
