              </ul>
            </li>
          </ul>
        </div><!-- /.nav-collapse -->
{% endblock %}


{% block body %}
    <div class="container theme-showcase" role="main">
      <div class="jumbotron">
        <h1>Tructionary <i>noun</i></h1>
        <p>a massive directory of food trucks for your eating pleasure</p>
      </div>
      <div class="page-header truck_detail_header">
        <h1>The Trucks</h1>
        <ul class="tructionary">
        {% for truck in trucks %}
          <li><a href="/tructionary/{{ truck.id }}">
          {{ truck.name }} <small>| <i>{{ truck.cuisine }}</i></small>
          </a></li>
        {% endfor %}
        </ul>
      </div>
    </div> <!-- /container -->
{% endblock %}
